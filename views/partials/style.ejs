.banner {
    width: 100%;
    padding: 9rem 3rem;
    text-align: center;
    background: url("../img/fondo.jpg");
    background-color: rgba(0,0,0,.3);
    background-blend-mode: soft-light;
    background-size: cover;
    background-position: center;
    box-sizing: border-box;
}

.banner h1 {
    color: #fcfcfc;
}

.container {
    width: 100%;
    height: 60px;
    background: #1e1e1f;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 5rem;
    box-sizing: border-box;
    position: sticky;
    top: 0px;
    border-radius: 11px;
}

.container:hover{
  box-shadow: 0 10px 16px 0 rgba(0, 0, 0, 0.685);
}

.logo {
    width: 50px;
    margin: 0;
}

.log:hover:{
  box-shadow: 0 11px 17px 0 rgba(0, 0, 0, 0.685);
}

.logo img {
    width: 100%;
    border-top-left-radius: 50% 50% ;
    border-top-right-radius: 50% 50% ;
    border-bottom-right-radius: 50% 50% ;
    border-bottom-left-radius: 50% 50% ;
}

.item-options {
    color: #f1f1f1;
    margin: 0 1.5rem;
    text-decoration: none;
}

.main-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.article {
    width: 70%;
} 

